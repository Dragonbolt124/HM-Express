extends ../layout.pug

block contenido
    div(class="container")
        h1 Mis Imagenes
        each imagen in imagenes
            .myborder.p-3.tr
                .row
                    .col-md-10
                        a(href="/app/imagenes/"+imagen._id+"", 
                            class="h3 text-dark text-decoration-none") #{imagen.titulo}
                    .col-md-2
                        a(href="/app/imagenes/"+imagen._id+"/edit", class="right-space") Editar
                        form(action="/app/imagenes/"+imagen._id+"?_method=DELETE", method="post"
                            enctype="multipart/form-data" class="link")
                            input(type="submit", value="Eliminar", class="border-0 bg-transparent text-danger")
